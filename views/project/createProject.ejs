<!DOCTYPE html>
<html>
  <head>
    <title>Create Project</title>
    <%- include('../layout/head'); %>
  </head>
  <body>
    <%- include('../layout/navbar', {user: locals.user}); %>
    <div class="container">
      <% if (locals.user) { %>
      <h1><%= user.userName %>! A New Project?</h1>
      <div class="container" style="margin:10px 0px;">
        <a class="btn btn-outline-dark" href="/projects"
          >Continue With Existing Project</a
        >
      </div>
      <% if (locals.error) { %>
      <h4>
        An Error was encountered!<%=
        `${locals.message!==''?`:${locals.message}`:''}` %>
      </h4>
      <% } %>
      <div class="jumbotron">
        <form
          action="/projects/create-project"
          name="createProject"
          id="createProject"
          method="post"
        >
          <fieldset>
            <div class="form-group">
              <div class="form-row">
                <h4>Project Name</h4>
              </div>
              <div class="form-row">
                <div class="col">
                  <input
                    type="text"
                    class="form-control"
                    id="projectName"
                    placeholder="Enter Project Name"
                    name="projectName"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="form-row">
                <h4>Description of Project</h4>
              </div>
              <div class="form-row">
                <div class="col">
                  <input
                    type="text"
                    class="form-control"
                    id="projectDesc"
                    placeholder="Enter Project Description"
                    name="projectDesc"
                    required
                  />
                </div>
              </div>
            </div>
            <div class="form-group" style="margin-top: 10px;">
              <div class="form-row">
                <h4>Private or Public?</h4>
              </div>
              <div class="form-row">
                <div class="col">
                  <div class="custom-control custom-switch">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      id="private"
                      name="private"
                    />
                    <label class="custom-control-label" for="private"
                      >Private?</label
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="form-row">
                <h4>Choose Programming Language</h4>
              </div>
              <div class="form-row">
                <div class="col">
                  <select
                    name="programmingLanguage"
                    id="programmingLanguage"
                    class="custom-select"
                    required
                  >
                    <!-- <option disabled selected>ProgrammingLanguage</option> -->
                    <option value="java">Java</option>
                    <option value="python">Python</option>
                    <option value="nodejs">Node</option>
                  </select>
                </div>
                <div class="col">
                  <select
                    name="version"
                    id="version"
                    class="custom-select"
                    required
                  >
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group" style="margin-top: 10px;">
              <div class="form-row">
                <h4>Want to use Database?</h4>
              </div>
              <div class="form-row">
                <div class="col">
                  <div class="custom-control custom-switch">
                    <input
                      onchange="toggleDb(event)"
                      type="checkbox"
                      class="custom-control-input"
                      id="dbSwitch"
                      name="dbSwitch"
                    />
                    <label class="custom-control-label" for="dbSwitch"
                      >Database?</label
                    >
                  </div>
                </div>
                <div class="col">
                  <select
                    name="database"
                    id="database"
                    class="custom-select"
                    required
                    disabled
                  >
                    <!-- <option disabled selected>ProgrammingLanguage</option> -->
                    <option value="mysql">MySQL</option>
                    <option value="postgres">Postgres</option>
                    <option value="mongodb">MongoDB</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="form-row">
                <div class="col">
                  <button type="submit" value="submit" class="btn btn-dark">
                    Submit
                  </button>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <% } %>
    </div>
    <script>
      //Script for toggle on/off databases
      function toggleDb(e) {
        var x = document.getElementById("database").disabled;
        document.getElementById("database").disabled = !x;
      }
      // Script for Dynamic option for programming languages
      var Select_List_Data = {
        version: {
          // name of associated select box

          // names match option values in controlling select box
          java: {
            text: ["14-jdk", "13-jdk", "12-jdk"],
            value: ["14-jdk", "13-jdk", "12-jdk"]
          },
          python: {
            text: ["3.6", "2.7", "3.7", "3.8"],
            tvalue: ["3.6", "2.7", "3.7", "3.8"]
          },
          nodejs: {
            text: ["10.x", "12.x"],
            value: ["10.x", "12.x"]
          }
        }
      };
      function removeAllOptions(sel, removeGrp) {
        var len, groups, par;
        if (removeGrp) {
          groups = sel.getElementsByTagName("optgroup");
          len = groups.length;
          for (var i = len; i; i--) {
            sel.removeChild(groups[i - 1]);
          }
        }

        len = sel.options.length;
        for (var i = len; i; i--) {
          par = sel.options[i - 1].parentNode;
          par.removeChild(sel.options[i - 1]);
        }
      }

      function appendDataToSelect(sel, obj) {
        var f = document.createDocumentFragment();
        var labels = [],
          group,
          opts;

        function addOptions(obj) {
          var f = document.createDocumentFragment();
          var o;

          for (var i = 0, len = obj.text.length; i < len; i++) {
            o = document.createElement("option");
            o.appendChild(document.createTextNode(obj.text[i]));

            if (obj.value) {
              o.value = obj.value[i];
            }

            f.appendChild(o);
          }
          return f;
        }

        if (obj.text) {
          opts = addOptions(obj);
          f.appendChild(opts);
        } else {
          for (var prop in obj) {
            if (obj.hasOwnProperty(prop)) {
              labels.push(prop);
            }
          }

          for (var i = 0, len = labels.length; i < len; i++) {
            group = document.createElement("optgroup");
            group.label = labels[i];
            f.appendChild(group);
            opts = addOptions(obj[labels[i]]);
            group.appendChild(opts);
          }
        }
        sel.appendChild(f);
      }
      document.forms["createProject"].elements[
        "programmingLanguage"
      ].onchange = function(e) {
        // name of associated select box
        var relName = "version";

        // reference to associated select box
        var relList = this.form.elements[relName];

        // get data from object literal based on selection in controlling select box (this.value)
        var obj = Select_List_Data[relName][this.value];

        // remove current option elements
        removeAllOptions(relList, true);

        // call function to add optgroup/option elements
        // pass reference to associated select box and data for new options
        appendDataToSelect(relList, obj);
      };

      // populate associated select box as page loads
      (function() {
        // immediate function to avoid globals

        var form = document.forms["createProject"];

        // reference to controlling select box
        var sel = form.elements["programmingLanguage"];
        sel.selectedIndex = 0;

        // name of associated select box
        var relName = "version";
        // reference to associated select box
        var rel = form.elements[relName];

        // get data for associated select box passing its name
        // and value of selected in controlling select box
        var data = Select_List_Data[relName][sel.value];

        // add options to associated select box
        appendDataToSelect(rel, data);
      })();
    </script>
  </body>
</html>
